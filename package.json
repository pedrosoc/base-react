{
  "name": "base-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cross-env": "^5.2.0",
    "lint-staged": "^8.1.5",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "1.1.5",
    "stylelint": "^9.10.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "yarn lint-fix:js",
      "git add"
    ],
    "src/**/*.css": [
      "yarn lint-fix:css",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "cross-env CI=true yarn test",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-fix:js": "eslint --fix --ext=js --ext=jsx ./src",
    "lint-fix:css": "stylelint --config=.stylelintrc 'src/**/*.css' --fix",

    "precommit": "lint-staged",
    "prepush": "yarn test:ci"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-react": "^7.11.1"
  }
}
